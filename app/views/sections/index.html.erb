<p id="notice"><%= notice %></p>

<h1>Listing Sections</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each_with_index do |section, index| %>
    <% @article = section.article %>
    <% @book = @article.book %>
      <tr>
        <td><%= section.title %></td>
        <td><%= section.description %></td>
        <td><%= link_to 'Show', book_article_section_path(@book,@article,section) %></td>
        <td><%= link_to 'Edit', edit_book_article_section_path(@book,@article,section) %></td>
        <td><%= link_to 'Destroy', book_article_section_path(@book,@article,section), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

